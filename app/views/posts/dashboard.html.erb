<div class="card mb-4 shadow-sm">
  <div class="card-body">
    <%= form_with model: Post.new, url: posts_path, local: true do |form| %>
      <div class="mb-3">
        <%= form.text_area :content, class: "form-control", rows: 2, placeholder: "Share something...", required: true %>
      </div>
      <div class="d-flex justify-content-between align-items-center">
        <div>
          <%= form.file_field :image, class: "form-control-file", accept: "image/*" %>
        </div>
        <%= form.submit "Post", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
